                <form asp-controller="Company" asp-action="CompanyRegistration" id="registrationForm">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <!-- company name input -->
                    <div class="form-outline mb-4">
                        <label class="form-label" asp-for="companyName">Company Name</label>
                        <input type="text" id="form3Example3" class="form-control form-control-lg"
                            asp-for="companyName"
                                placeholder="Enter company name" required />
                        <span asp-validation-for="companyName" class="text-danger"></span>
                    </div>
                    <!-- Email input -->
                    <div class="form-outline mb-4">
                        <label class="form-label" asp-for="companyEmail">Email address</label>
                        <input type="email" id="form3Example3" class="form-control form-control-lg" asp-for="companyEmail"
                                placeholder="Enter a valid email address" required/>
                        <span asp-validation-for="companyEmail" class="text-danger"></span>
                    </div>

                    <!--barnch form starts here-->
                    @*<div class="form-outline mb-4">
                <label class="form-label btn btn-dark">Branch Address</label>

                </div>*@
                    <!--Branch Name -->
                    <div class="form-outline mb-4">
                        <label class="form-label" asp-for="BranchName">Branch Name</label>
                        <input type="text" id="form3Example3" class="form-control form-control-lg" asp-for="BranchName"
                                placeholder="Enter Branch Name" required />

                        <span asp-validation-for="BranchName" class="text-danger"></span>
                    </div>
                    <!-- Country input -->
                    <div class="form-outline mb-4">
                        <label class="form-label" asp-for="country">Country</label>
                        <select id="selectCountry" class="countries form-control form-control-lg" asp-for="country"
                                placeholder="Enter a valid country" required>
                            <option value="" selected="selected">Select country</option>
                        </select>
                        <span asp-validation-for="country" class="text-danger"></span>
                    </div>
                    <!-- State input -->
                    <div class="form-outline mb-4">
                        <label class="form-label" asp-for="state">State</label>
                        <select id="selectState" class="form-control form-control-lg" asp-for="state"
                                placeholder="Enter a valid state" required>
                            <option value="" selected="selected">Please select the country first</option>
                        </select>
                        <span asp-validation-for="state" class="text-danger"></span>
                    </div>
                    <!-- City input -->
                    <div class="form-outline mb-4">
                        <label class="form-label" asp-for="city">City</label>
                        <select id="selectCity" class="form-control form-control-lg" asp-for="city"
                                placeholder="Enter a valid city" required>
                            <option value="" selected="selected">Please select the state first</option>
                        </select>
                        <span asp-validation-for="city" class="text-danger"></span>
                    </div>
                    <!-- street input -->
                    <div class="form-outline mb-4">
                        <label class="form-label" asp-for="street">Street</label>
                        <input type="text" id="form3Example3" class="form-control form-control-lg" asp-for="street"
                                placeholder="Enter Street " required />
                        <span asp-validation-for="street" class="text-danger"></span>
                    </div>
                    <!-- landmark input -->
                    <div class="form-outline mb-4">
                        <label class="form-label" asp-for="LandMark">Landmark</label>
                        <input type="text" id="form3Example3" class="form-control form-control-lg" asp-for="LandMark"
                                placeholder="Enter a landmark" required />
                        <span asp-validation-for="LandMark" class="text-danger"></span>
                    </div>

                    <!-- Pincode input -->
                    <div class="form-outline mb-4">
                        <label class="form-label" asp-for="pincode">Pincode</label>
                        <input type="number" min="100000" max="999999" id="form3Example3" class="form-control form-control-lg" asp-for="pincode"
                                placeholder="Enter a valid pincode" required />
                        <span asp-validation-for="pincode" class="text-danger"></span>
                    </div>
                    <!-- Password input -->
                    <div class="form-outline mb-3">
                        <label class="form-label" asp-for="adminPassword">Account Admin Password</label>
                        <input type="password" id="userPassword" class="form-control form-control-lg"
                               placeholder="Enter a valid password" asp-for="adminPassword" required />
                        <span asp-validation-for="adminPassword" class="text-danger"></span>
                        <span id="passwordValidationMessage" class="text-danger"></span>
                    </div>

                    @{
                        if (ViewBag.flag == 1)
                        {
                            <div class="validation-summary-errors alert alert-danger" data-valmsg-summary="true">
                                <ul>
                                    <li>email entered already exists</li>
                                </ul>
                            </div>
                        }
                    }
