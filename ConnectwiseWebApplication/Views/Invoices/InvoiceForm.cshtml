@model ConnectwiseWebApplication.Models.InvoiceForm
@{
    ViewData["Title"] = "Form";
    Layout = "~/Views/Shared/_AfterLogin.cshtml";
}


<style>
    .input-size {
        width: 500px;
    }
</style>

<link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
<link rel="stylesheet" type="text/css" href="https://pixinvent.com/stack-responsive-bootstrap-4-admin-template/app-assets/css/bootstrap-extended.min.css">
<link rel="stylesheet" type="text/css" href="https://pixinvent.com/stack-responsive-bootstrap-4-admin-template/app-assets/fonts/simple-line-icons/style.min.css">
<link rel="stylesheet" type="text/css" href="https://pixinvent.com/stack-responsive-bootstrap-4-admin-template/app-assets/css/colors.min.css">
<link rel="stylesheet" type="text/css" href="https://pixinvent.com/stack-responsive-bootstrap-4-admin-template/app-assets/css/bootstrap.min.css">

<div class="grey-bg container-fluid">
    <div class="card">
        <h1 class="mt-3 text-center">Create Invoice</h1>
        <form asp-action="GeneratedInvoice" asp-controller="Invoices">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row m-3">
                <div class="col-md-6">
                    <div class="form-outline">
                        <label class="form-label" asp-for="InvoiceTitle">Invoice title</label>
                        <input asp-for="InvoiceTitle" class="form-control" type="text" placeholder="Title" required>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-outline">
                        <label class="form-label" asp-for="InvoiceDescription">Invoice description</label>
                        <textarea asp-for="InvoiceDescription" class="form-control" type="text" cols="50" maxlength="200" placeholder="Description" required></textarea>
                    </div>
                </div>
            </div>
            <div class="row m-3">
                <div class="col-md-6">
                    <div class="form-outline">
                        <label class="form-label" asp-for="GeneratedForEmail">Payer Email</label>
                        <input asp-for="GeneratedForEmail" class="form-control" type="email" placeholder="Enter a valid Email" required>
                        <span asp-validation-for="GeneratedForEmail" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-outline">
                        <label class="form-label" asp-for="DueDate">Due Date</label>
                        <input type="date" id="duedate" min="@DateTime.Now.ToString("yyyy-MM-dd")" name="duedate" asp-for="DueDate" required />
                    </div>
                </div>
            </div>
            <div class="row m-3">
                <div class="col-md-6">
                    <div class="form-outline">
                        <label class="form-label" asp-for="TotalQuantity">Total Quantity</label>
                        <input type="number" min="1" id="typeNumber" placeholder="Min 1" class="form-control" asp-for="TotalQuantity" required />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-outline">
                        <label class="form-label" asp-for="TotalAmount">Amount in Rupees</label>
                        <input min="500" type="number" id="typeNumber" class="form-control" placeholder="Min 500" asp-for="TotalAmount" required />
                    </div>
                </div>
            </div>
            <div class="row m-3">
                <div class="form-outline">
                    <input type="submit" value="Generate Invoice" class="btn btn-block text-white" style="background-color:#2B3467" />
                </div>
            </div>
            @{
                int val = Convert.ToInt32(ViewData["emailerror"]);
                if (val == -1)
                {
                    <div class="validation-summary-errors alert alert-danger m-3" data-valmsg-summary="true">
                        <ul>
                            <li>Can't generate invoice for this email.</li>
                        </ul>
                    </div>
                }
            }
        </form>
    </div>
</div>