<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ConnectwiseWebApplication</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/AfterLogin.css"/>
    <link rel="stylesheet" href="~/ConnectwiseWebApplication.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/SidebarStyling.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.syncfusion.com/ej2/21.1.35/bootstrap5.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <script src="https://cdn.syncfusion.com/ej2/21.1.35/dist/ej2.min.js"></script>
</head>
<body onload="dropDown()">

    <div id="mySidebar" class="sidebar">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
        <a asp-action="Home" asp-controller="Admin">Home</a>
        <a asp-action="InvoiceForm" asp-controller="Invoices" asp>Add Invoice</a>
        <a asp-action="Create" asp-controller="User">Add User</a>
        <a asp-action="Index" asp-controller="Branch">Add Branch</a>
        <div class="text-center mt-5">
            <a class="exit-button" asp-controller="Login" asp-action="Logout">
                <i class="fas fa-sign-out-alt" style="margin-right: 0.5rem;"></i>
                Logout
            </a>
        </div>
    </div>
    <div id="main">
        <header>

            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3" style="background-color:#2B3467">
                <div class="container-fluid">
                    <button class="openbtn" onclick="openNav()">&#9776; ConnectWise </button>
                    @*<a class="openbtn navbar-brand text-white">ConnectWise</a>*@
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="" asp-action="">About</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="" asp-action="">Contact</a>
                            </li>
                        </ul>
                    </div>
                    <div class="text-white">
                        <h5>Signed in as <span class="text-success fw-bold">@ViewData["UserName"]</span></h5>
                    </div>
                </div>
            </nav>

        </header>

        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/ForwardBackward.js"></script>
    <script src="~/js/Sidebar.js"></script>
    <script src="~/js/dropdownRegistration.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <ejs-scripts></ejs-scripts>
</body>
</html>
