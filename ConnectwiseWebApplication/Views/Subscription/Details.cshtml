@using Newtonsoft.Json;
@model ConnectwiseWebApplication.Models.RegistrationPayment

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_BeforeLoginLayout.cshtml";
}
<head>
    <link rel="stylesheet" href="~/css/payment.css">
    @*<script src="js/PaymentJavaScript.js"></script>*@
</head>

<h1>Payment</h1>


<div class="container bg-light d-md-flex align-items-center">
    <div class="card box1 shadow-sm p-md-5 p-md-5 p-4">
        <div class="fw-bolder mb-4">
            <span class="fas fa-dollar-sign"></span>
            <span class="ps-1">Bill</span>
        </div>
        <div class="d-flex flex-column">
            <div class="d-flex align-items-center justify-content-between text">
                <span class="">Convenience fees </span>
                <span class="fas fa-dollar-sign">
                    <span class="ps-1">20</span>
                </span>
            </div>
            <div class="d-flex align-items-center justify-content-between text mb-4">
                <span>Total</span>
                <span class="fas fa-dollar-sign">
                    <span class="ps-1">@ViewBag.SubscriptionFees</span>
                </span>
            </div>
            <div class="border-bottom mb-4"></div>
            <div class="d-flex flex-column mb-4">
                <span class="far fa-file-alt text">
                    <span class="ps-2">Subscription ID:</span>
                </span>
                <span class="ps-3">@ViewBag.SubscriptionId</span>
            </div>
            <div class="d-flex flex-column mb-5">
                <span class="far fa-calendar-alt text">
                    <span class="ps-2">Payment Date</span>
                </span>
                <span class="ps-3">@DateTime.Now.ToString("yyyy-MM-dd")</span>
            </div>
        </div>
    </div>
    <div class="card box2 shadow-sm">
        <div class="d-flex align-items-center justify-content-between p-md-5 p-4">
            <span class="h5 fw-bold m-0">Payment methods</span>
            <div class="btn btn-primary bar">
                <span class="fas fa-bars"></span>
            </div>
        </div>
        <ul class="nav nav-tabs mb-3 px-md-4 px-2">
            <li class="nav-item">
                <a class="nav-link px-2 active" aria-current="page" href="#">Credit Card</a>
            </li>

        </ul>

        <form asp-action="PaymentForm" asp-controller="Subscription">
            <div class="row">
                <div class="col-12">
                    <div class="d-flex flex-column px-md-5 px-4 mb-4">
                        <span>Credit Card</span>
                        <div class="inputWithIcon">
                           
                            <input class="form-control" type="number" min="1000000000000000" max="9999999999999999" asp-for="Payment.CreditCardNumber" placeholder="Enter The Card Number" required>
                            <span asp-validation-for="Payment.CreditCardNumber" class="text-danger"></span>
                            <span class="">
                                <img src="https://www.freepnglogos.com/uploads/mastercard-png/mastercard-logo-logok-15.png" alt="">
                            </span>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="d-flex flex-column ps-md-5 px-md-0 px-4 mb-4">
                        <span>
                            Expiration<span class="ps-1">Date</span>
                        </span>
                        <div class="inputWithIcon">
                            <input type="date" class="form-control" asp-for="Payment.CardExpiration" min="@DateTime.Now.ToString("yyyy-MM")" placeholder="Enter The card Expiration" required>
                            <span asp-validation-for="Payment.CardExpiration" class="text-danger"></span>

                            <span class="fas fa-calendar-alt"></span>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="d-flex flex-column pe-md-5 px-md-0 px-4 mb-4">
                        <span>Code CVV</span>
                        <div class="inputWithIcon">
                            <input type="password" class="form-control" asp-for="Payment.CVV" maxlength="3" placeholder="Enter The CVV" required>
                            <span asp-validation-for="Payment.CVV" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="col-12">
                    <div class="d-flex flex-column px-md-5 px-4 mb-4">
                        <span>Name</span>
                        <div class="inputWithIcon">
                            <input class="form-control text-uppercase" type="text" asp-for="Payment.CardHolderName" placeholder="Enter The Card Holder Name" required>
                            <span asp-validation-for="Payment.CardHolderName" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="col-12 px-md-5 px-4 mt-3">
                    @*@TempData["Regisetrationpayemntmodel"]=@JsonConvert.SerializeObject(Model)*@
                    @*<a class="btn btn-primary w-100" asp-action="CompanyRegistrationPaymentDone" asp-controller="Company" asp-route-registrationPaymentstr="@JsonConvert.SerializeObject(Model)">Pay @ViewBag.SubscriptionFees</a>*@
                    @*<a class="btn btn-primary w-100">Pay @ViewBag.SubscriptionFees</a>*@
                    <button type="submit" class="btn btn-primary w-100">Pay @ViewBag.SubscriptionFees</button>
                </div>
            </div>
        </form>
    </div>
</div>