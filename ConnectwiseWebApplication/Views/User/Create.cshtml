@model ConnectwiseWebApplication.Models.User

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AfterLogin.cshtml";
}


<style>
    .input-size {
        width: 500px;
    }
</style>

<link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
<link rel="stylesheet" type="text/css" href="https://pixinvent.com/stack-responsive-bootstrap-4-admin-template/app-assets/css/bootstrap-extended.min.css">
<link rel="stylesheet" type="text/css" href="https://pixinvent.com/stack-responsive-bootstrap-4-admin-template/app-assets/fonts/simple-line-icons/style.min.css">
<link rel="stylesheet" type="text/css" href="https://pixinvent.com/stack-responsive-bootstrap-4-admin-template/app-assets/css/colors.min.css">
<link rel="stylesheet" type="text/css" href="https://pixinvent.com/stack-responsive-bootstrap-4-admin-template/app-assets/css/bootstrap.min.css">

<div class="grey-bg container-fluid">
    <div class="card">
        <h1 class="mt-3 text-center">Add User</h1>
        <form asp-action="AddUser" id="registrationForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row m-3">
                <div class="col-md-6">
                    <div class="form-outline">
                        <label asp-for="UserName" class="control-label">User Email</label>
                        <input asp-for="UserName" type="email" class="form-control input-size" placeholder="Enter the User Name" required />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-outline">
                        <label asp-for="BranchId" class="control-label">Select Branch</label><br />
                        <select asp-for="BranchId" class="form-control input-size" asp-items="@(new SelectList(@ViewBag.Branches,"BranchId","BranchName"))"></select>
                    </div>
                </div>
            </div>

            <div class="row m-3">
                <div class="col-md-6">
                    <div class="form-outline">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" id="userPassword" type="password" class="form-control input-size" placeholder="Enter user password" required />
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <span id="passwordValidationMessage" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row m-3">
                <div class="form-outline">
                    <input type="submit" value="Create User" class="btn btn-block text-white" style="background-color:#2B3467" />
                </div>
            </div>
            @{
                int val = Convert.ToInt32(ViewData["error"]);
                if (val == -1)
                {
                    <div class="validation-summary-errors alert alert-danger m-3" data-valmsg-summary="true">
                        <ul>
                            <li>Email entered already exists</li>
                        </ul>
                    </div>
                }
            }
        </form>
    </div>
</div>


